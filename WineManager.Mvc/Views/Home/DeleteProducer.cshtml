﻿@using WineManager.EntityModels
@model Producer
<h2>@ViewData["Title"]</h2>

<form asp-action="DeleteProducerPost" method="post">
    <div class="mb-3">
        <label class="form-label" for="ProducerName">Producer Name</label>
        <input class="form-control" id="ProducerName" value="@Model.ProducerName" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label" for="region">Region</label>
        <input class="form-control" id="region" value="@Model.Region" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label" for="country">Country</label>
        <input class="form-control" id="country" value="@Model.Country" readonly />
    </div>
    <div class="mb-3">
        @Html.HiddenFor(c => c.ProducerName)
        <input type="submit" value="Delete Producer"
               class="btn btn-outline-danger" />
        <a href="Producers" class="btn btn-outline-secondary">
            Cancel
        </a>
    </div>
</form>